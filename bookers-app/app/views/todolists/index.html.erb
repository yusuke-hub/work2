

<div class="index-new">
<h1>Books</h1>
<table class="table">
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
    </tr>
    
    <% @lists.each do |list| %>
    <tr>
        <td class="title"><%= list.title %></td>
        <td class="body"><%= list.body %></td>
        <td class="blank"><%= link_to "Show", todolist_path(list.id) %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Edit", edit_todolist_path(list.id) %>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Destroy", destroy_todolist_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
</table>

<h2>New book</h2>
<% if @list.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
  <h4><%= @list.errors.count %>errors prohibited this book from being saved:</h4>
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li> 
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@newlist,url:'/todolists') do |f| %>
    <div class="field_with_errors">
    <p>Title</p>
    <%= f.text_field :title %>      
    </div>
    <div class="field_with_errors">
    <p>Body</p>
    <%= f.text_area :body %>
    </div>
    <br><br>
    <%= f.submit 'Create Book' %>
<% end %>    
</div>